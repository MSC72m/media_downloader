# Instagram-specific configuration
instagram:
  max_login_attempts: 3  # Maximum login attempts before cooldown
  login_cooldown_seconds: 600  # Cooldown period after max login attempts in seconds
  default_timeout: 10  # Default request timeout in seconds
  url_patterns:
    - "^https?://(?:www\\.)?instagram\\.com/p/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/reel/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/stories/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/tv/[\\w-]+"

# Twitter/X-specific configuration
twitter:
  default_timeout: 10  # Default request timeout in seconds
  url_patterns:
    - "^https?://(?:www\\.)?twitter\\.com/[\\w]+/status/[\\d]+"
    - "^https?://(?:www\\.)?x\\.com/[\\w]+/status/[\\d]+"
    - "^https?://(?:www\\.)?twitter\\.com/i/spaces/[\\w]+"
    - "^https?://(?:www\\.)?x\\.com/i/spaces/[\\w]+"
    - "^https?://(?:mobile\\.)?twitter\\.com/[\\w]+/status/[\\d]+"
    - "^https?://(?:mobile\\.)?x\\.com/[\\w]+/status/[\\d]+"

# Instagram-specific configuration
instagram:
  max_login_attempts: 3  # Maximum login attempts before cooldown
  login_cooldown_seconds: 600  # Cooldown period after max login attempts in seconds
  default_timeout: 10  # Default request timeout in seconds
  url_patterns:
    - "^https?://(?:www\\.)?instagram\\.com/p/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/reel/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/stories/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/tv/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/[\\w]+/p/[\\w-]+"
    - "^https?://(?:www\\.)?instagram\\.com/[\\w]+/reel/[\\w-]+"

# Pinterest-specific configuration
pinterest:
  default_timeout: 10  # Default request timeout in seconds
  oembed_timeout: 10  # OEmbed API timeout in seconds
  url_patterns:
    - "^https?://(?:www\\.)?pinterest\\.com/pin/[\\d]+"
    - "^https?://(?:www\\.)?pinterest\\.com/[\\w]+/[\\w-]+/[\\d]+"
    - "^https?://(?:www\\.)?pin\\.it/[\\w]+"
    - "^https?://(?:www\\.)?pinterest\\.com\\.au/pin/[\\d]+"
    - "^https?://(?:www\\.)?pinterest\\.ca/pin/[\\d]+"
    - "^https?://(?:www\\.)?pinterest\\.co\\.uk/pin/[\\d]+"
    - "^https?://(?:www\\.)?pinterest\\.de/pin/[\\d]+"
    - "^https?://(?:www\\.)?pinterest\\.fr/pin/[\\d]+"

# SoundCloud-specific configuration
soundcloud:
  default_retries: 3  # Default number of retries
  socket_timeout: 15  # Socket timeout in seconds
  default_audio_format: mp3  # Default audio format
  default_audio_quality: best  # Default audio quality
  url_patterns:
    - "^https?://(?:www\\.)?soundcloud\\.com/[\\w-]+/[\\w-]+"
    - "^https?://(?:www\\.)?soundcloud\\.com/[\\w-]+/sets/[\\w-]+"
    - "^https?://(?:m\\.)?soundcloud\\.com/[\\w-]+/[\\w-]+"
    - "^https?://(?:m\\.)?soundcloud\\.com/[\\w-]+/sets/[\\w-]+"
    - "^https?://soundcloud\\.app\\.goo\\.gl/[\\w]+"

# UI configuration
ui:
  metadata_fetch_timeout: 90  # Metadata fetch dialog timeout in seconds
  polling_interval: 0.5  # Polling interval for async operations in seconds
  format_options: ["Video + Audio", "Audio Only", "Video Only"]
  message_timeout_seconds: 5  # Timeout for status bar messages in seconds (after which shows 'Ready' or next message)
  error_message_timeout_seconds: 15  # Timeout for error messages in seconds (longer than regular messages)
  loading_dialog_max_dots: 3  # Maximum number of dots in loading dialog before cycling
  loading_dialog_animation_interval: 500  # Milliseconds between dot animation updates in loading dialog
  subtitle_batch_size: 5  # Number of subtitles to load per batch in UI to prevent freezing
